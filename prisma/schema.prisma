generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Registro_talleres {
  id             Int      @id @default(autoincrement())
  fecha_registro DateTime @default(now())
  taller_id      Int
  usuario_nc     String   @unique
  taller         Talleres @relation(fields: [taller_id], references: [id])
  usuario        Usuarios @relation(fields: [usuario_nc], references: [nc])
}

model Usuarios {
  apellidos            String
  nombre               String
  nc                   String                 @id
  email                String                 @unique
  semestre             Int
  registro_talleres    Registro_talleres?
  Registro_videojuegos Registro_videojuegos[]
  targetas             Targetas[]
}

model Registro_videojuegos {
  id                      Int      @id @default(autoincrement())
  fecha_registro          DateTime @default(now())
  videojuego_seleccionado String
  usuario_nc              String
  usuario                 Usuarios @relation(fields: [usuario_nc], references: [nc])
}

model Talleres {
  id          Int                 @id @default(autoincrement())
  nombre      String
  tallerista  String
  descripcion String
  horario     String // Ej: "11:30 AM - 1:30 PM"
  registros   Registro_talleres[]
}

model Targetas {
  id     Int      @id @default(autoincrement())
  user   Usuarios @relation(fields: [userId], references: [nc])
  userId String
  nc     String
  tip    String
  url    String
}
