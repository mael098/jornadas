generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Registro_talleres {
  id              Int      @id @default(autoincrement())
  taller_horario1 String
  taller_horario2 String
  taller_horario3 String
  fecha_registro  DateTime @default(now())
  usuario_nc      String

  usuario Usuarios @relation(fields: [usuario_nc], references: [nc])
}

model Usuarios {
  apellidos String
  nombre    String
  nc        String  @id
  email     String  @unique
  semestre  Int
  telefono  String
  verified  Boolean @default(false)

  registro_talleres    Registro_talleres[]
  Registro_videojuegos Registro_videojuegos[]
  Registro_viernes     Registro_viernes[]
}

model Registro_videojuegos {
  id                      Int      @id @default(autoincrement())
  fecha_registro          DateTime @default(now())
  videojuego_seleccionado String
  usuario_nc              String

  usuario Usuarios @relation(fields: [usuario_nc], references: [nc])

  @@map("RegistroVideojuegos")
}

model Registro_viernes {
  id             Int      @id @default(autoincrement())
  fecha_registro DateTime @default(now())
  taller         String
  usuario_nc     String

  usuario Usuarios @relation(fields: [usuario_nc], references: [nc])

  @@map("RegistroViernes")
}
